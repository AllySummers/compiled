{
  "extends": ["group:monorepos", "group:recommended", "group:definitelyTyped"],
  "dependencyDashboard": true,
  "postUpdateOptions": ["yarnDedupeHighest"],
  "rangeStrategy": "bump",
  "semanticCommits": true,
  "schedule": ["weekly"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "managers": ["npm"],
      "updateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "managers": ["nvm"],
      "automerge": true
    },
    {
      "updateTypes": ["lockFileMaintenance"],
      "automerge": true
    },
    {
      "extends": ["group:postcss", "schedule:weekly"],
      "packagePatterns": ["^postcss-", "^autoprefixer"],
      "groupName": "postcss packages"
    },
    {
      "packagePatterns": ["webpack", "-loader", "webpack-plugin"],
      "groupName": "webpack packages"
    },
    {
      "packagePatterns": ["^parcel", "^@parcel"],
      "groupName": "parcel packages"
    },
    {
      "depTypeList": ["peerDependencies"],
      "rangeStrategy": "widen"
    },
    {
      "extends": ["packages:eslint", "schedule:monthly"],
      "groupName": "eslint packages"
    }
  ]
}
