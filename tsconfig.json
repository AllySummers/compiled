{
  /* See https://www.typescriptlang.org/docs/handbook/compiler-options.html */
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "module": "es2015",
    "jsx": "react",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "plugins": [{ "transform": "./dist/src/ts-transformer.js", "debug": true }]
  },
  "include": ["src/*", "src/**/*", "examples/*"],
  "exclude": ["node_modules"]
}
